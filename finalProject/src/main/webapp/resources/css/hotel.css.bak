.ht_top {
    background: url(/res/img/main/hotel/hotel_key_bg.jpg) no-repeat;
    background-size: cover;
    background-position: center center;
    width: 100%;
    height: 483px;
}

.ht_title {
    padding-top: 135px;
    color: white;
    font-size: 40px;
    font-weight: bold;
    text-align: center;
    width: 100%;
}

.ht_desc {
    text-align: center;
    width: 100%;
    font-size: 24px;
    color: white;
    padding-top: 20px;
}

.ht_search_box {
    border-radius: 3px;
    background: url(/res/img/component/bg/bgb_60.png) repeat;
    width: 851px;
    margin: 0 auto;
    height: 77px;
    margin-top: 58px;
    padding: 20px;
}

.ht_search {
    width: 290px;
    height: 37px;
    line-height: 37px;
    font-size: 14px;
    color: #808080;
    border: 1px solid #c8c8ca;
    padding-left: 10px;
    background: url(/res/img/common/gnb/search_icon.png) no-repeat white;
    background-position: 98% center;
    margin-right: 10px;
    float: left;
}

.start_date, .end_date {
    width: 181px;
    height: 37px;
    font-size: 14px;
    color: #808080;
    border: 1px solid #c8c8ca;
    padding-left: 10px;
    background: url(/res/img/main/hotel/check_in_bg.png) no-repeat white;
    background-position: 95% center;
    margin-right: 10px;
    float: left;
}

.ht_submit {
    text-align: center;
    color: white;
    font-size: 14px;
    font-weight: bold;
    width: 120px;
    height: 37px;
    line-height: 37px;
    background: #ff9320;
    border: 1px solid #f7870f;
    cursor: pointer;
    float: left;
}

.ht_center {
    width: 100%;
    border-bottom: 1px solid #e1e1e1;
    background: white;
    height: 125px;
    overflow: hidden;
}

.cbox {
    width: 364px;
    height: 125px;
    float: left;
}

.cimg {
    float: left;
}

.cleft {
    width: 217px;
    float: left;
}

.ctitle {
    color: #363636;
    font-size: 17px;
    font-weight: bold;
    padding-top: 30px;
}

.cdesc {
    color: #555555;
    font-size: 14px;
    line-height: 20px;
    padding-top: 14px;
}

.ht_footer {
    width: 100%;
    background: #efefef;
    padding-top: 70px;
}

.htf_title {
    color: #363636;
    font-size: 24px;
    font-weight: bold;
    padding-bottom: 20px;
}

.ht_city_box {
    float: left;
    display: block;
    width: 25%;
    height: 185px;
    overflow: hidden;
    margin-bottom: 90px;
    position: relative;
    cursor: pointer;
}

.htview {
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: 2;
    background: url(/res/img/component/bg/bgb/50.png) repeat;
    display: none;
}

.ht_city_name {
    width: 100%;
    height: 100%;
    line-height: 185px;
    color: white;
    text-align: center;
    font-weight: bold;
    font-size: 24px;
    background: url(/res/img/component/bg/bgb_20.png) repeat;
    text-shadow: 0px 0px 5px black;
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: 1;
}

.ht_city_img {
    width: 100%;
    height: 100%;
    transition: all 3.6s;
    -webkit-transition: all 3.6s;
}

